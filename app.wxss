/**app.wxss**/
page {
  font-family: "Microsoft YaHei","Helvetica Neue",HelveticaNeue,Helvetica,TeXGyreHeros,FreeSans,"Nimbus Sans L","Liberation Sans",Arial,sans-serif;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.common-content-container {
  padding: 15px;
  width: 100%;
  box-sizing: border-box;
}
.bug-list-region {
  position: fixed;
  /*margin-top: 60px;*/
  height: calc(100%);
}

.btn-container {
  display: flex;
  flex-direction: row;
}
/** 修改button默认的点击态样式类**/
.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: blue;
}


.bug-item {
  width: 100%;
}
.head-container {
  display: none; /*flex*/
  flex-direction: row;
  /*position: fixed;*/
  width: 100%;
  height: 30px;
}
.head-index {
  width: 15%;
}
.head-nickname {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
  
  display: inline-block;
  font-size: 14px;
}
.head-content {
  width: 100%;
  font-size: 16px;
  margin-bottom: 8px;
  word-break: break-all;
}
.head-cratetime {
  font-size: 14px;
}

.small-txt {
  font-size: 14px;
  line-height: 20px;
  color: #71767a;
}


.bugs-list-container {
  width: 100%;
  height: calc(100% - 30px);
}
.bug-item-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #d7d7d7;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}